@import "./reset.styl"
@import "./loader.styl"

body
  background #2C3643

.wrapper
  .content
    margin 30px 0
    h1
      font-size 28px
      text-align center
      color #fff
      line-height 2
    img
      $width = 640px
      $margin = 10px
      $border = 5px
      display inline-block
      margin $margin
      width ($width / 2) - $margin * 2 - $border * 2
      height 200px
      border solid $border #fff

#box
  width 100px
  height 100px
  background #fff